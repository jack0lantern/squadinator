{
  "manifest_version": 2,

  "name": "squadinator",
  "description": "Need to create a surprise party? Organizing a special event? The squadinator allows you to create new squads out of your own squads, easy as 1,2,3 (and a bit more)",
  "version": "0.0.0.0",
  
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["squadinator.css"],
      "js": ["jquery-3.3.1.min.js", "squadinator.js"],
	  "run_at": "document_end"
    }
  ],
  
  "background": {
	"scripts": ["background.js"],
	"persistent": false
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Squadinator"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}